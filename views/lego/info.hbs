<div class="row">
   <div class="col">
      <img class="img-thumbnail" src="{{lego.image}}" width="350" height="350">
   </div>
   <div class="col">
      <table class="table table-bordered text-center mt-4">
         <tr>
            <th colspan="2" class="text text-bg-success">Product Info</th>
         </tr>
         <tr>
            <th>Name</th>
            <th>{{lego.name}}</th>
         </tr>
         <tr>
            <th>Type</th>
            <th>{{lego.type}}</th>
         </tr>

         <tr>
            <th>Manufacturing Date</th>
            <th>{{dateFormat lego.fmg "DD/MM/YYYY"}}</th>
         </tr>

        <tr>
            <th>Origin</th>
            <th>{{lego.origin}}</th>
        </tr>

         <tr>
            <th>Price</th>
            <th>{{lego.price}}</th>
         </tr>



      </table>
   </div>
</div>