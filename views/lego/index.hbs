<table class="table table-bordered bg-light p-4 mt-3 mb-3 text-center">
   <tr>
      <th class="text-primary" colspan="5">Product List</th>
      <th>
         <a class="btn btn-primary" href="/lego/add">ADD</a>
         <a class="btn btn-success" href="/lego/drop"
            onclick="return confirm('Are you sure to drop all product ?');">DROP</a>
      </th>
   </tr>
   <tr>
      <th>Name</th>
      <th>Image</th>
      <th>Type</th>
      <th>FMG</th>
      <th>price</th>
      <th>Menu</th>
   </tr>
   <tr>
      <th colspan="5">
         <select class="form-control" onchange="window.location.href=this.value">
            <option value="">Sort by name</option>
            <option value="/lego/sort/asc">Ascending</option>
            <option value="/lego/sort/desc">Descending</option>
         </select>
      </th>
      <th colspan="1">
         <form action="/lego/search" method="post">
            <div class="form-group">
               <input class="form-control" type="search" name="name" placeholder="Search by name">
            </div>
         </form>
      </th>
   </tr>
   {{#each lego }}
   <tr>
      <td>{{name}}</td>

      <td>
         <a href="/lego/detail/{{_id}}">
            <img src="{{image}}" width="100" height="100">
         </a>
      </td>

      <td>{{type}}</td>

      <td>{{dateFormat fmg "DD/MM/YYYY"}}</td>

      <td>{{price}}</td>

      <td>
         <a class="btn btn-success" href="/lego/edit/{{_id}}">EDIT</a>
         <a class="btn btn-danger" href="/lego/delete/{{_id}}">DELETE</a>
      </td>
   </tr>
   {{/each}}
</table>