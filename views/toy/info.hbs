<div class="row">
   <div class="col">
      <img class="img-thumbnail" src="{{toy.image}}" width="350" height="350">
   </div>
   <div class="col">
      <table class="table table-bordered text-center mt-4">
         <tr>
            <th colspan="2" class="text text-bg-success">Product Info</th>
         </tr>
         <tr>
            <th>Name</th>
            <th>{{toy.name}}</th>
         </tr>
         <tr>
            <th>Type</th>
            <th>{{toy.type}}</th>
         </tr>

         <tr>
            <th>Manufacturing Date</th>
            <th>{{dateFormat toy.fmg "DD/MM/YYYY"}}</th>
         </tr>

         <tr>
            <th>Price</th>
            <th>{{toy.price}}</th>
         </tr>

      </table>
   </div>
</div>